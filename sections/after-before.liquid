
<style>
   #shopify-section-{{ section.id }}  *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    #shopify-section-{{ section.id }} .main-afbf-12{
        width: 50%;
        display: grid;
        place-items: center;
    }
    #shopify-section-{{ section.id }} .inner-afbf-12{
        position: relative;
        place-content: center;
        display: grid;
        --position:50%;
        overflow: hidden;
        height: 580px;
    }
    #shopify-section-{{ section.id }} .images-afbf-12{
        max-width: 100%;
        height:100%;
        position: relative;
        overflow:hidden;
    }
    #shopify-section-{{ section.id }} .images-afbf-12 img{
        max-width: 700px;
        max-height: 100%;
        object-fit: cover;
        z-index:3;
        pointer-events:none;
    }
   #shopify-section-{{ section.id }}  .img-before-afbf-12{
        position: absolute;
        inset: 0;
        height:100%;
        overflow:hidden;
        width: var(--position);
        z-index:5;
        poiner-events:none;
    }
    #shopify-section-{{ section.id }} .afbf-slider{
        inset: 0;
        position: absolute;
        cursor: pointer;
        width: 100%;
        height: 100%;  
        opacity: 0;  
        z-index:15;
    }
    #shopify-section-{{ section.id }} .inner-afbf-12 svg{
        width: 20px;
        height: 20px;
    }
    #shopify-section-{{ section.id }} .inner-afbf-12 svg path{
      fill:#fff;
    }
    #shopify-section-{{ section.id }} .afbf-slider-line{
        position: absolute;
        inset: 0;
        color:transparent;
        width: .2rem;
        max-height: 100%;
        z-index: 10;
        left: var(--position);
        background: black;
        pointer-events: none;
        transform: translateX(-50%);
    }
    #shopify-section-{{ section.id }} .afbf-slider-btn{
        position: absolute;
        background: black;
        width:30px;
        height:30px;
        display:flex;
        align-items:center;
        justify-content:center;
        border-radius: 50%;
        top: 50%;
        left: var(--position);
        transform: translate(-50%, -50%);
        pointer-events: none;
        z-index: 15;
    }
     #shopify-section-{{ section.id }} .bf-text{
      position:absolute;
      top:10px;
      left:20px;
      z-index:2;
      font-size:18px; 
      padding:7px 15px;
      background:#fff;
      color:black;
    }
    #shopify-section-{{ section.id }} .af-text{
      position:absolute;
      bottom:10px;
      right:20px;
      z-index:1;
      font-size:18px; 
      padding:7px 15px;
      background:#fff;
      color:black;
    } 
    #shopify-section-{{ section.id }} .main-12{
        width: 100%;
        margin:80px 0 50px !important;
    }
    #shopify-section-{{ section.id }} .inner-12{
        width: 90%;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 50px;
    }
    #shopify-section-{{ section.id }} .content-12{
        width: 50%;
    }
    #shopify-section-{{ section.id }} .content-12 h1{
        font-size: 45px;
        font-weight:600;
    }
    #shopify-section-{{ section.id }} .content-12 a{
        display: block;
        text-decoration: none;
        text-align: center;
        padding: 12px 0;
        background: black;
        color: #fff;
        width: 200px;
        margin: 30px 0 0;
    }
    #shopify-section-{{ section.id }} .content-12 a:hover{
        background: #271f1fde;
    }
  @media (max-width:1100px){
     #shopify-section-{{ section.id }} .images-afbf-12 img{
            max-width:500px;
          }
  }
    @media(max-width:730px){
       #shopify-section-{{ section.id }} .inner-12{
         flex-direction:column;
       }
      .inner-afbf-12{
        height: 550px;
      }
      #shopify-section-{{ section.id }} .content-12{
        width: 100%;
    }
       #shopify-section-{{ section.id }} .main-afbf-12{
        width:100%;
    }
                #shopify-section-{{ section.id }} .images-afbf-12 img{
            max-width:400px !important;
          }
      .inner-afbf-12{
        height: 350px !important;
      }

    }
</style>

<div class="main-12">
    <div class="inner-12">
        <div class="content-12">
            <h1>{{ section.settings.afbf-head }}</h1>
            <a href="{{ section.settings.afbf-btn-u }}">{{ section.settings.afbf-btn-l }}</a>
        </div>
        <div class="main-afbf-12">
            <div class="inner-afbf-12">
             
            
                <div class="images-afbf-12">
                  <div  class="img-before-afbf-12">
                    <img src="{{ section.settings.before-img | img_url:'master' }}" alt="" width="" height="">
                     <p class="bf-text">Before</p>
                  </div>
                  <div class="afbf-slider-line">.</div>
                  <div class="img-after-afbf-12">
                    <img src="{{ section.settings.after-img | img_url:'master' }}" alt="" width="" height="">
                 <p class="af-text">After</p>
                  </div>
                </div>
                <input type="range" min="0" max="100" value="50" class="afbf-slider" aria-label="percentage of photo">
                
                <div class="afbf-slider-btn" aria-hidden="true">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                        <path d="M406.6 374.6l96-96c12.5-12.5 12.5-32.8 0-45.3l-96-96c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L402.7 224l-293.5 0 41.4-41.4c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-96 96c-12.5 12.5-12.5 32.8 0 45.3l96 96c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.3 288l293.5 0-41.4 41.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0z"/>
                      </svg>
                      
                </div>
            </div>
        </div>
        
    </div>
</div>





<script>
    const container = document.querySelector('.inner-afbf-12');
    document.querySelector('.afbf-slider').addEventListener('input', (e) => {
        container.style.setProperty('--position', `${e.target.value}%`)
    })


</script>


{% schema %}
  {
    "name": "After Before Slider",
    "settings": [
      {
        "type":"text",
        "id":"afbf-head",
        "label":"Your Heading"
      },
       {
        "type":"text",
        "id":"afbf-btn-l",
        "label":"Button Label",
         "default":"SHOP NOW"
      },
        {
        "type":"url",
        "id":"afbf-btn-u",
        "label":"Button Link"
      },
      {
        "type":"image_picker",
        "id":"before-img",
        "label":"Before Image"
      },
      {
        "type":"image_picker",
        "id":"after-img",
        "label":"After Image"
      }
    ],
    "presets":[
      {
        "name":"After Before Slider"
      }
    ]
  }
{% endschema %}